{
  "extends": ["config:base"],
  "semanticCommits": false,
  "labels": ["Renovate"],
  "baseBranches": ["trunk"],
  "packageRules": [
    {
      "description": "Automatically merge minor and patch-level updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ]